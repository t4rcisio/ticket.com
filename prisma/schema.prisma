// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age_rating {
  General_Audiences
  Parental_Guidance_Suggested
  Parents_Strongly_Cautioned
  Restricted
  Adults_Only
}

enum Language {
  en_US
  pt_BR
  es_ES
}

enum Subtitle {
  none
  en_US
  pt_BR
  es_ES
}

enum Permissions {
  USER
  EDITOR
  ADMIN
}

enum movieRoom {
  STANDARD
  IMAX
  DOLBY
}

model roomSeat{
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Movie {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Name        String
  Description String
  Duration    Int
  Language    Language   @default(pt_BR)
  Subtitles   Subtitle   @default(none)
  Age_rating  Age_rating @default(General_Audiences)
  Session     Session[]
}

model Room {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  identifier   String
  category     movieRoom  @default(STANDARD)
  capacibility Int
  availability DateTime[]
  Session      Session[]
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  room      Room     @relation(fields: [roomId], references: [id])
  movie     Movie    @relation(fields: [movieId], references: [id])
  roomId    String
  movieId   String
}

model User {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  Name        String
  Email       String      @unique
  Password    String
  Phone       String?
  bithday     DateTime
  permissions Permissions @default(USER)
}
